@using DongThucVatQuangTri.Applications.Common;
@using DongThucVatQuangTri.Applications.Roles.Dtos;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PageResult<RoleViewModels>

@{
    ViewData["Title"] = "Nhóm quyền";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut("slow");
        }, 2000);
    </script>
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách @ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách  @ViewData["Title"] </li>
    </ol>

    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12 mt-1">
                    <div class="row">
                        <div class="col-md-10">
                            <form asp-action="Index" asp-controller="Role" method="post">
                                <div class="row">
                                    <div class="col-md-9">
                                        <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control mt-1" />
                                    </div>
                                    <div class="col-md-3">
                                        <button class="btn btn-primary mt-1" type="submit">Tìm kiếm</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-secondary mt-1" href="@Url.Action("Index","Role",new {keyword = ""})">Reset</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body align-middle">
            @if (ViewBag.SuscessMsg != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    @ViewBag.SuscessMsg
                </div>
            }
            @{
                int i = ((Model.PageIndex - 1) * Model.PageSize) + 1;
            }
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Tên nhóm quyền
                        </th>
                        <th>
                            Tổng số tài khoản
                        </th>
                        <th>
                            Ngày cập nhật
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <th class="align-middle" scope="row">
                                @i
                                @{
                                    i++;
                                }
                            </th>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="align-middle" style="width:20%;">
                                @Html.DisplayFor(modelItem => item.totalAccount)
                            </td>
                            <td class="align-middle" style="width:20%;">
                                @Html.DisplayFor(modelItem => item.UpdateAt)
                            </td>
                            <td class="align-middle" style="width:5%;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
                                    <i class="fa-regular fa-pen-to-square" style="color: #194de6;"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Component.InvokeAsync("Pager", Model)
        </div>

    </div>
</div>
