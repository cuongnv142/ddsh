@using DongThucVatQuangTri.Applications.UserManage.Dtos;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ResetPasswordRequest
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - CSDL Động Thực Vật</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content" style=" background: #63b873;">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewData["Title"]</h3></div>
                                <div class="card-body">
                                    <div class="row justify-content-center ">
                                        <form method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input asp-for="code" type="hidden" />
                                            <input asp-for="UserId" type="hidden" />
                                            <div class="form-group">
                                                <label asp-for="Email"></label>
                                                <input asp-for="Email" class="form-control " disabled />
                                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="NewPassword">Nhập mật khẩu mới</label>
                                                <div class="input-group">
                                                    <input onkeyup="Showbutton(event)" class="form-control password border-end-0" asp-for="NewPassword" class="block mt-1 w-full" type="password" required />
                                                    <span class="bg-white input-group-text togglePassword" id="">
                                                        <i data-feather="eye" style="cursor: pointer"></i>
                                                    </span>
                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                </div> 
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ConfirmPassword">Nhập lại mật khẩu mới</label>
                                                <div class="input-group">
                                                    <input onkeyup="Showbutton(event)" class="form-control password border-end-0" asp-for="ConfirmPassword" class="block mt-1 w-full" type="password" required />
                                                    <span class="bg-white input-group-text togglePassword" id="">
                                                        <i data-feather="eye" style="cursor: pointer"></i>
                                                    </span>
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="text-center mt-3">
                                                <button type="submit" class="btn btn-primary">Cập nhật</button>

                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>
    <script>
        feather.replace({
            'aria-hidden': 'true'
        });
        function Showbutton(event) {
            let parent = $(event.target).closest(".input-group");
            if (!event.target.value || event.target.value?.trim() == "") {

                console.log(parent)
                $(parent).find(".togglePassword").css("display", "none");
                $(event.target).attr("style", "border-right: 1px solid #ced4da !important;border-top-right-radius: 0.25rem;border-bottom-right-radius: 0.25rem; width:100% !important; ");

            } else {
                $(parent).find(".togglePassword").css("display", "flex");
                $(event.target).attr("style", "");
            }
        }
        $(".togglePassword").click(function (e) {
            e.preventDefault();
            let parent = $(this).closest(".input-group");
            var type = $(this).parent().parent().find("input").attr("type");
            if (type == "password") {
                $(parent).find("svg.feather.feather-eye").replaceWith(feather.icons["eye-off"].toSvg());
                $(parent).find("input").attr("type", "text");
            } else if (type == "text") {
                $(parent).find("svg.feather.feather-eye-off").replaceWith(feather.icons["eye"].toSvg());
                $(parent).find("input").attr("type", "password");
            }
        });
    </script>
    <script>
        $(document).ready(function(){
            $("input[type='password']").each(function (idx, event) {
                if (!event.value || event.value?.trim() == "") {
                    $(".togglePassword").css("display", "none");
                    $(event).attr("style", "border-right: 1px solid #ced4da !important;border-top-right-radius: 0.25rem;border-bottom-right-radius: 0.25rem; ");
                } else {
                    $(".togglePassword").css("display", "flex");
                    $(event).attr("style", "");
                }
            })
        })
    </script>
</body>
</html>


