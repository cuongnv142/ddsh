    <script>
        function formatOption(option) {
            if (!option.id) {
                return option.text; // Hiển thị nội dung gốc nếu không có id
            }
            // Hiển thị chỉ một đoạn text từ tùy chọn (ví dụ: Description)
            var optionText = option.text.split('-')[1].trim();
            return optionText;
        }
